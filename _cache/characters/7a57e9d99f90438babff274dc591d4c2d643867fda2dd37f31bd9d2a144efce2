trim());\\n                } else if (line.startsWith('current_day:')) {\\n                    calendarData.current_day = parseInt(line.split(':')[1].trim());\\n                } else if (line.startsWith('days:')) {\\n                    inDays = true;\\n                } else if (inDays) {\\n                    const parts = line.split(':');\\n                    if (parts.length >= 2) {\\n                        const day = parseInt(parts[0].trim());\\n                        const content = parts.slice(1).join(':').trim();\\n                        calendarData.days[day] = content;\\n                    }\\n                }\\n            }\\n            \\n            return calendarData;\\n        }\\n\\n        // ====================================================================\\n        // ===            重点修改区域：渲染日历函数 renderCalendar            ===\\n        // ====================================================================\\n        function renderCalendar(calendarData) {\\n            const calendarGrid = document.querySelector('.calendar-grid');\\n            const calendarTitle = document.querySelector('.calendar-title');\\n            const calendarInfo = document.querySelector('.calendar-info');\\n            const summary = document.querySelector('.details-calendar-button > summary');\\n            \\n            const year = calendarData.year;\\n            const month = calendarData.month;\\n\\n            // 设置标题\\n            summary.innerHTML = ` ${year}年 ${month}月 日历`; // 动态更新折叠标题\\n            calendarTitle.textContent = `${month}月`;\\n            calendarInfo.textContent = `年份 ${year}`;\\n            \\n            // --- 新增逻辑 ---\\n            // 1. 清除旧的日期单元格\\n            calendarGrid.querySelectorAll('.day').forEach(cell => cell.remove());\\n\\n            // 2. 计算当月总天数\\n            const daysInMonth = new Date(year, month, 0).getDate();\\n\\n            // 3. 计算当月第一天是星期几 (0=周一, 1=周二, ..., 6=周日)\\n            const firstDayOfMonth = new Date(year, month - 1, 1);\\n            const firstDayOfWeek = (firstDayOfMonth.getDay() + 6) % 7; // getDay()返回0(周日)-6(周六)\\n\\n            // 4. 填充日历开头的空白单元格\\n            for (let i = 0; i < firstDayOfWeek; i++) {\\n                const emptyCell = document.createElement('div');\\n                emptyCell.className = 'day empty'; // 添加 'empty' 类以便设置不同样式\\n                calendarGrid.appendChild(emptyCell);\\n            }\\n            // --- 结束新增 ---\\n\\n            // 5. 创建并填充当月的每一天\\n            for (let day = 1; day <= daysInMonth; day++) { // 使用计算出的总天数\\n                const dayElement = document.createElement('div');\\n                dayElement.className = 'day';\\n                if (day === calendarData.current_day) {\\n                    dayElement.classList.add('current-day');\\n                }\\n                \\n                // 添加日期数字\\n                const dayNumber = document.createElement('div');\\n                dayNumber.className = 'day-number';\\n                dayNumber.textContent = day;\\n                dayElement.appendChild(dayNumber);\\n                \\n                // 添加日期内容\\n                if (calendarData.days[day]) {\\n                    const dayContent = document.createElement('div');\\n                    dayContent.className = 'day-content';\\n                    \\n                    const content = calendarData.days[day];\\n                    const contentItems = content.split(',').map(item => item.trim());\\n                    \\n                    contentItems.forEach(text => {\\n                        if (text) {\\n                            const textElement = document.createElement('div');\\n                            textElement.className = 'normal-text';\\n                            textElement.textContent = text;\\n                            dayContent.appendChild(textElement);\\n                        }\\n                    });\\n                    \\n                    dayElement.appendChild(dayContent);\\n                }\\n                \\n                calendarGrid.appendChild(dayElement);\\n            }\\n        }\\n    </script>\\n</body>\\n</html>\\n```\",\"trimStrings\":[],\"placement\":[1,2],\"disabled\":false,\"markdownOnly\":true,\"promptOnly\":false,\"runOnEdit\":true,\"substituteRegex\":0,\"minDepth\":null,\"maxDepth\":null},{\"id\":\"4cfc87e5-3b42-4709-963f-85afe6469bd4\",\"scriptName\":\"{{user}}状态栏\",\"findRegex\":\"/<user_now_status>\\\\s*([\\\\s\\\\S]*?)\\\\s*<\\\\/user_now_status>/gm\",\"replaceString\":\"<div class=\\\"map-ui-wrapper\\\">\\n    <style>\\n        /* Define the custom font (保持不变) */\\n        @font-face {\\n            font-family: 'NotoSansCJKsc-Bold';\\n            src: url('https://files.catbox.moe/tisct7.otf') format('opentype');\\n            font-style: normal;\\n            font-weight: bold; /* Assuming font is inherently bold */\\n            font-display: swap;\\n        }\\n\\n        /* 主容器样式 */\\n        .map-ui-wrapper {\\n            background-color: rgba(235, 225, 210, 0.95); /* 浅米色背景 */\\n            border: 1px solid rgba(165, 145, 120, 0.5);\\n            border-radius: 6px;\\n            max-width: 861px;\\n            margin: 5px auto;\\n            padding: 0 5px 5px 5px;\\n            box-sizing: border-box;\\n            overflow: hidden;\\n\\n            /* 颜色变量 - 使用深灰褐色文本 */\\n            --map-text-color: #4B3F34; /* 更深的灰褐色，提高对比度 */\\n            --map-content-border: rgba(165, 145, 120, 0.3);\\n            --map-button-bg: rgba(218, 198, 171, 0.95);\\n            --map-button-border: rgba(165, 145, 120, 0.8);\\n            --map-button-highlight: rgba(228, 208, 181, 0.95);\\n            --map-button-shadow: rgba(175, 155, 130, 0.85);\\n            --map-button-outer-shadow: rgba(150, 130, 105, 0.3);\\n            --map-icon-color: #5b99c9; /* 蓝色图标 */\\n            --map-content-bg: rgba(225, 215, 200, 0.95); /* 内容区背景 */\\n            --map-button-hover: rgba(225, 205, 